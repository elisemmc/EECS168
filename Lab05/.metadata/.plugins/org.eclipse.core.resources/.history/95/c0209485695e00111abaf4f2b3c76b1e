public class Pyramid {
	public static void main(String[] args){;
		double A = 5;
		for (int h = 1; h <= 5; h++){
			System.out.println("");
			if (h <= 5){
				for (int w =1; w <= A; w++){
					System.out.print("*");
				}
			}
			A--;
		}	
	}

}
