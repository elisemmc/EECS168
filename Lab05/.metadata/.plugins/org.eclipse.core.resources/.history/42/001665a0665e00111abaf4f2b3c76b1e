import java.util.Scanner;
public class Pyramid {
	public static void main(String[] args){
		Scanner input = new Scanner(System.in);
		System.out.println("Please enter a number:");
		int A = input.nextInt();
		for (int cnt = 1; cnt <= A; cnt++){
			System.out.print("*");
		}	
	}

}
